<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:background="@drawable/wisata"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/button_masuk_kendaraan"
        android:background="@drawable/kendaraan"
        android:layout_alignTop="@+id/button_masuk_wisata"
        android:layout_alignStart="@+id/textView"
        android:layout_marginStart="34dp" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/button_masuk_pengunjung"
        android:background="@drawable/people"
        android:layout_above="@+id/textView2"
        android:layout_alignStart="@+id/button_masuk_kendaraan" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/button_masuk_wisata"
        android:background="@drawable/gps"
        android:layout_above="@+id/textView4"
        android:layout_alignStart="@+id/button_masuk_user" />
    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/button_masuk_user"
        android:background="@drawable/flates1"
        android:layout_marginEnd="34dp"
        android:layout_above="@+id/textView7"
        android:layout_alignEnd="@+id/textView4" />
    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/navi"
        android:background="@drawable/orang"
        android:layout_above="@+id/button_masuk_pengunjung"
        android:layout_toStartOf="@+id/textView7"
        android:layout_marginBottom="30dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aplikasi Pendataan Wisata Taman Kaligua"
        android:id="@+id/textView"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textIsSelectable="false"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data Pengunjung Masuk"
        android:textStyle="bold"
        android:id="@+id/textView2"
        android:textColor="@color/foreground_material_dark"
        android:textSize="16dp"
        android:layout_marginBottom="26dp"
        android:layout_above="@+id/button_masuk_kendaraan"
        android:layout_alignEnd="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data Kendaraan Masuk"
        android:textStyle="bold"
        android:id="@+id/textView3"
        android:textColor="#ffffff"
        android:textSize="16dp"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignStart="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Input Data Wisata Baru"
        android:textStyle="bold"
        android:id="@+id/textView4"
        android:textColor="#ffffff"
        android:textColorHighlight="#000000"
        android:textSize="16dp"
        android:layout_marginBottom="43dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data Pengguna"
        android:id="@+id/textView7"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignEnd="@+id/button_masuk_user" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="See Navigate"
        android:id="@+id/textView12"
        android:layout_above="@+id/button_masuk_pengunjung"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textColor="#ff0b81" />


</RelativeLayout>